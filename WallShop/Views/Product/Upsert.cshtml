@model WallShop.Models.Product

@{ 
    var title = "Create Product";           <!--временная переманная; изначально наша страница установленна для создания -->
}

<form method="post" enctype="multipart/form-data">
    <!--добавляем enctype="multipart/form-data" для работы с изображениями-->
    @if (Model.Id != 0)
    {                                   <!--в случае создания нового товара id не будет определенно, для этого добавляем проверку -->
        title = "Edit Product";         <!--в случае ненулевого значения id, title меняется на Edit-->
        <input asp-for="Id" hidden /> <!--чтобы Id можно было использовать в методе POST-EDIT-->
    }
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>      <!--заголовок меняется в зависимости от title-->
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>                 <!--в этом месте будут отображаться сообщения об ошибках для Name(валидация)-->
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        Image
                    </div>
                    <div class="col-8">
                        <input type="file" name="files" id="uploadBox" multiple class="form-control" />
                    </div>

                </div>

                @*<div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                </div>*@

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            @if (Model.Id != 0)
                            {
                                //Update
                                <input type="submit" class="btn btn-info w-100" value="Update" />
                            }
                            else
                            {
                                //Create
                                <input type="submit" onclick="return validateInput()" class="btn btn-primary w-100" value="Create" />
                            }

                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>

@section Scripts{      <!--раздел для скриптов куда можно добвлять любой код js-->

    @{
        <partial name="_ValidationScriptsPartial" />
    }      <!--скрипт автоматически выполняет проверку данных на стороне клиента(без предачи данных на сервер)-->

}