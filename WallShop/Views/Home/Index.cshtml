@model WallShop.Models.ViewModels.HomeVM

    <div class="container">
        <div class="text-center">
            @*выделяем All темным цветом; data-filter для фильтрации данных*@
            <button class="btn-dark filter-button" data-filter="all">All</button>
            @*выводим все категории*@
            @foreach (var obj in Model.Categories)
            {
                <button class="btn btn-outline-secondary filter-button" data-filter="@obj.Name.Replace(' ','_')">
                    @obj.Name
                </button>
            }
        </div>
        <br />
        <div class="row">
            @foreach (var prod in Model.Products)
            {
                <partial name="_IndividualProductCard" model="prod" />      @*добавили ссылку на частичное представление и модель*@
                //display all products
            }
        </div>
    </div>

@section Scripts{ 
    <script>                            //добавляем скрипт JQuery для использования фильтра и перехождения по нажатию на выбранную категорию
    $(document).ready(function(){

    $(".filter-button").click(function(){

        var value = $(this).attr('data-filter');
        if(value == "all")
        {
            $('.filter').show('1000');
        }
        else
        {
            $(".filter").not('.'+value).hide('3000');
            $('.filter').filter('.'+value).show('3000');

        }
    });

});
    </script>
}